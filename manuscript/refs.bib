keywords = {Canonical Correspondence Analysis,Canopy influence,Detrended Correspondence Analysis,Forest,Grain,Kartesz (in press),Sample extent,Scale,Soil,canonical correspondence analysis,canopy in-,detrended correspondence analysis,fluence,forest,grain,in press,kartesz,nomenclature,sample extent,scale,soil},
month = {jun},
number = {3},
pages = {329--340},
pmid = {278},
publisher = {Blackwell Publishing Ltd},
title = {{Scale dependence of vegetation-environment correlations: a case study of a North Carolina Piedmont woodland}},
