pmid = {29875295},
publisher = {The Royal Society},
title = {{The strength of the biodiversity–ecosystem function relationship depends on spatial scale}},
url = {http://rspb.royalsocietypublishing.org/lookup/doi/10.1098/rspb.2018.0038},
volume = {285},
year = {2018}
